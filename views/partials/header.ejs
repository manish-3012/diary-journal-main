    <script>
        $(document).ready(function () {
            // Set default language to English
            var currentLanguage = 'en';

            // Function to change language
            function changeLanguage(language) {
                // You can replace this with actual translations
                var translations = {
                    'en': {
                        'home': 'Home',
                        'schedule': 'Schedule',
                        'bengaluru': 'Puja Venue',
                        // 'contacts': 'Contacts',
                        'registration': 'Registration'
                    },
                    'hi': {
                        'home': 'होम',
                        'schedule': 'अनुसूची',
                        'bengaluru': 'पूजा स्थल',
                        // 'contacts': 'संपर्क',
                        'registration': 'पंजीकरण'
                    }
                    // Add more translations as needed
                };

                // Change navbar text
                $('li.nav-item:eq(0) a').text(translations[language]['home']);
                $('li.nav-item:eq(1) a').text(translations[language]['schedule']);
                $('li.nav-item:eq(2) a').text(translations[language]['chhindwara']);
                // $('li.nav-item:eq(3) a').text(translations[language]['contacts']);
                $('li.nav-item:eq(4) a').text(translations[language]['registration']);

                // Update the current language
                currentLanguage = language;
            }

            // Event listener for language change
            $('.language-toggle').on('click', function () {
                var selectedLanguage = $(this).data('language');
                changeLanguage(selectedLanguage);
            });
        });
    </script>
